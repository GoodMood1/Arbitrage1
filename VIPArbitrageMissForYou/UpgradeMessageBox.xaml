<Window x:Class="VIPArbitrageMissForYou.UpgradeMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VIPArbitrageMissForYou"
        mc:Ignorable="d"
        Title="UpgradeMessageBox" Height="450" Width="800" WindowStyle="None">
    <Window.Background>
        <ImageBrush ImageSource="/Resources/tipspic1.png"/>
    </Window.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Button Grid.Column="3" HorizontalAlignment="Right" VerticalAlignment="Top" Click="Button_Click" Content=" X " Background="Red"/>
        <TextBlock FontSize="20" Opacity="0.6" Background="Black" FontWeight="Bold" Foreground="White" Name="tipdescr" Text="It's a peace of cake..." TextWrapping="Wrap" Grid.ColumnSpan="2" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Window>
